# Development Dockerfile for Next.js with hot reload
FROM node:20-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm install

# Copy source (will be overwritten by volume mount in dev)
COPY . .

# Expose port
EXPOSE 3000

ENV PORT 3000
ENV NODE_ENV development
ENV WATCHPACK_POLLING true

# Start development server with hot reload
CMD ["npm", "run", "dev"]
